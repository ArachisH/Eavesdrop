name: Build & Test

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]
  workflow_dispatch:
  
jobs:
  build:
    runs-on: self-hosted
    steps:
    - uses: actions/checkout@v3
      with:
        fetch-depth: 0
    - name: Building
      run: dotnet build --verbosity normal

  test:
    runs-on: self-hosted
    steps:
    - name: Testing
      run: dotnet test --verbosity normal
